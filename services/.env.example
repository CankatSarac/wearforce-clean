# WearForce Services Environment Configuration
# Copy this file to .env and update the values

# Environment
DEBUG=true
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgresql+asyncpg://wearforce:wearforce_password@localhost:5432/wearforce
CRM_DATABASE_URL=postgresql+asyncpg://wearforce:wearforce_password@localhost:5432/wearforce_crm
ERP_DATABASE_URL=postgresql+asyncpg://wearforce:wearforce_password@localhost:5432/wearforce_erp
NOTIFICATION_DATABASE_URL=postgresql+asyncpg://wearforce:wearforce_password@localhost:5432/wearforce_notification

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# NATS Configuration
NATS_URL=nats://localhost:4222

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Service URLs (for GraphQL Gateway)
CRM_SERVICE_URL=http://localhost:8001
ERP_SERVICE_URL=http://localhost:8002
NOTIFICATION_SERVICE_URL=http://localhost:8003

# Service Ports
GRAPHQL_SERVICE_PORT=8000
CRM_SERVICE_PORT=8001
ERP_SERVICE_PORT=8002
NOTIFICATION_SERVICE_PORT=8003

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=WearForce
SMTP_FROM_EMAIL=noreply@wearforce.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_PHONE=+1234567890

# Push Notification Configuration (Firebase)
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json
FIREBASE_PROJECT_ID=your-firebase-project-id

# Webhook Configuration
WEBHOOK_SECRET_KEY=your-webhook-secret-key
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY_SECONDS=60
WEBHOOK_TIMEOUT_SECONDS=30

# Background Tasks Configuration
RQ_REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# File Upload Configuration
UPLOAD_MAX_SIZE_MB=10
UPLOAD_ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx
UPLOAD_DIRECTORY=./uploads

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=./logs/wearforce.log

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_CREDENTIALS=true

# Monitoring Configuration
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_ENABLED=false
HEALTH_CHECK_ENABLED=true

# Development Configuration
AUTO_RELOAD=true
SHOW_DOCS=true
SHOW_REDOC=true